@model SeniorProject.ViewModels.CourseListViewModel


<br />
<h1>Courses List</h1>
<hr id="line" />
<br />


    <a asp-action="AdminHome" class="btn btn-secondary">Admin Home</a>

<table id="ta" class="table table-light table-hover">
    <thead>
        <tr>
            <th>
                Course Title
            </th>
            <th>
                Course Code
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>     
     @{ 
            try{
            
                foreach (var item in Model.courses)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.course_Title)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.course_Code)
                        </td>                     
                        
                        <td>
                            @Html.ActionLink("Edit", "EditCourse", new { id = item.course_Id },new {@class="btn btn-warning"}) |
                            @Html.ActionLink("Delete", "DeleteCourse", new {  id = item.course_Id },new {@class="btn btn-danger"})
                        </td>

                    </tr>
                }
            }
            catch (Exception)
            {
                <h1>error in the loop</h1>

            }
     }
    </tbody>
</table>
<br />
<a asp-action="AddCourse" class="btn btn-primary col-md-12">Add Course</a>

<style>
    body {
        background: rgb(157,217,190);
        background: linear-gradient(180deg, rgba(157,217,190,1) 0%, rgba(130,186,161,1) 41%, rgba(51,140,100,1) 100%);
    }

    #ta {
        margin-top: 50px;
    }

    #line {
        width: 18%;
        opacity: 50%;
        color: #717970;
        height: 2px;
    }
</style>
