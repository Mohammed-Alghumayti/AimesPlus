@section scripts{
    <script type="text/javascript">
        
        function change() {

           for (var i = 1; i < 12; i++) {
                const check = document.getElementById("check".concat(i));
            const box = document.getElementById("text".concat(i));
            

            if (check.checked) {
                box.disabled = false;
            } else {
            box.disabled = true;
            }

